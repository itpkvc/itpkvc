      <script>
          var err = '<%= message %>'
          var user_id = '<%= user_id %>'
          var uri = window.location.toString();   

          function teacher(){
            var value = 'teacher'
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          }
          function student(){
            var value = 'student'
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          }
          function admin(){
            var value = 'admin'
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          }
          function system(){
            var value = 'system'
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
